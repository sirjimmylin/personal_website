<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Projects</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">A collection of my experiments in code and data.</p>
    </div>

    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <% @projects.each do |project| %>
        <article class="flex flex-col items-start justify-between p-6 rounded-2xl bg-gray-50 hover:bg-gray-100 transition border border-gray-100">
          
          <div class="flex items-center gap-x-4 text-xs w-full">
            <time datetime="<%= project.published_at %>" class="text-gray-500">
              <%= project.published_at&.strftime("%b %Y") || "Draft" %>
            </time>
            
            <div class="ml-auto flex gap-2">
              <% if project.repo_link.present? %>
                <%= link_to "Code", project.repo_link, target: "_blank", class: "relative z-10 rounded-full bg-gray-200 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-300" %>
              <% end %>
              <% if project.demo_link.present? %>
                <%= link_to "Live Demo", project.demo_link, target: "_blank", class: "relative z-10 rounded-full bg-indigo-100 px-3 py-1.5 font-medium text-indigo-600 hover:bg-indigo-200" %>
              <% end %>
            </div>
          </div>

          <div class="group relative mt-4">
            <h3 class="text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
              <%= link_to project.title, project %>
            </h3>
            <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= project.summary %></p>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</div>