<div data-controller="toc" class="bg-white px-6 py-32 lg:px-8">
  <div class="mx-auto max-w-7xl grid grid-cols-1 lg:grid-cols-4 gap-8">
    
    <div class="lg:col-span-1 lg:sticky lg:top-24 self-start space-y-8">
      <div>
        <%= link_to "â† Back to Projects", projects_path, class: "text-sm font-semibold text-gray-500 hover:text-indigo-600" %>
      </div>

      <% if @project.repo_link.present? || @project.demo_link.present? %>
        <div class="p-4 bg-indigo-50 rounded-lg border border-indigo-100 space-y-3">
          <h4 class="font-bold text-indigo-900 text-sm uppercase tracking-wide">Project Links</h4>
          <% if @project.repo_link.present? %>
            <%= link_to "View Source Code", @project.repo_link, target: "_blank", class: "block w-full text-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <% end %>
          <% if @project.demo_link.present? %>
            <%= link_to "Launch Live Demo", @project.demo_link, target: "_blank", class: "block w-full text-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
          <% end %>
        </div>
      <% end %>

      <div data-toc-target="container" class="p-4 bg-gray-50 rounded-lg border border-gray-100">
        <h4 class="font-bold text-gray-900 mb-4">Table of Contents</h4>
        <nav data-toc-target="links" class="space-y-2 text-sm">
        </nav>
      </div>
    </div>

    <article class="lg:col-span-3 prose prose-lg prose-indigo mx-auto lg:mx-0">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl mb-2"><%= @project.title %></h1>
      <p class="text-lg text-gray-600 mb-8 font-light"><%= @project.summary %></p>
      
      <div data-toc-target="content">
        <%= markdown(@project.body) %>
      </div>
    </article>
  </div>
</div>