<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    
    <div class="max-w-2xl mx-auto text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">Search Results</h2>
      <p class="mt-2 text-lg text-gray-600">
        Found <%= @results.count %> result<%= "s" if @results.count != 1 %> for "<%= params[:query] %>"
      </p>
    </div>

    <div class="max-w-2xl mx-auto space-y-8">
      <% if @results.any? %>
        <% @results.each do |result| %>
          <% item = result.searchable %>
          
          <article class="flex flex-col items-start justify-between p-6 rounded-lg bg-gray-50 hover:bg-gray-100 transition border border-gray-100">
            <div class="flex items-center gap-x-4 text-xs">
              <span class="font-medium text-indigo-600">
                <%= item.class.name == "Post" ? "Blog Post" : "Project" %>
              </span>
              <time datetime="<%= item.published_at %>" class="text-gray-500">
                <%= item.published_at&.strftime("%b %d, %Y") %>
              </time>
            </div>
            
            <div class="group relative mt-2">
              <h3 class="text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <%= link_to item.title, item %>
              </h3>
              <p class="mt-2 line-clamp-2 text-sm leading-6 text-gray-600">
                <%= item.summary %>
              </p>
            </div>
          </article>
        <% end %>
      <% else %>
        <div class="text-center py-12 bg-gray-50 rounded-lg">
          <p class="text-gray-500">No matches found. Try a different keyword?</p>
        </div>
      <% end %>
    </div>

  </div>
</div>