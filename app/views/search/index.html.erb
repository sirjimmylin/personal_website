<div class="container mx-auto mt-28 px-5">
  <h1 class="text-3xl font-bold mb-8">Search Results for "<%= params[:query] %>"</h1>

  <% if @results.any? %>
    <div class="space-y-6">
      <% @results.each do |result| %>
        <% item = result.searchable %>
        
        <div class="p-6 bg-white shadow rounded-lg hover:shadow-md transition border border-gray-100">
          <%= link_to item, class: "block group" do %>
            
            <div class="flex items-center space-x-2 mb-2">
              <span class="text-xs font-bold uppercase tracking-wide text-blue-600 bg-blue-50 px-2 py-1 rounded">
                <%= item.class.name %> </span>
              <h2 class="text-xl font-bold group-hover:text-blue-600 transition">
                <%= item.title %>
              </h2>
            </div>

            <p class="text-gray-600 line-clamp-2">
              <% if item.respond_to?(:description) && item.description.present? %>
                <%= item.description %>
              <% elsif item.body.present? %>
                <% text = item.body.respond_to?(:to_plain_text) ? item.body.to_plain_text : item.body %>
                <%= text.truncate(150) %>
              <% end %>
            </p>
            
          <% end %>
        </div>
      <% end %>
    end
  <% else %>
    <p class="text-gray-500 text-lg">No results found.</p>
  <% end %>
</div>