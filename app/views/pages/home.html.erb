<div class="bg-white px-6 py-24 sm:py-32 lg:px-8">
  <div class="mx-auto max-w-2xl text-center">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Hi, I'm Jimmy Lin</h1>
    <p class="mt-6 text-lg leading-8 text-gray-600">
      I am a Data Scientist passionate about machine learning. 
      Here I document my projects, experiments, and thoughts on technology.
    </p>
    <div class="mt-10 flex items-center justify-center gap-x-6">
      <%= link_to "My Projects", projects_path, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <%= link_to "Read the Blog", posts_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    </div>
  </div>
</div>

<div class="mx-auto max-w-7xl px-6 lg:px-8 pb-24">
  <div class="grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-2">
    
    <div>
      <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-6">Recent Posts</h2>
      <div class="space-y-8">
        <% @recent_posts.each do |post| %>
          <article class="flex flex-col items-start justify-between border-l-4 border-indigo-100 pl-4 hover:border-indigo-600 transition-colors">
            <div class="flex items-center gap-x-4 text-xs">
              <time datetime="<%= post.published_at %>" class="text-gray-500"><%= post.published_at.strftime("%B %d, %Y") %></time>
            </div>
            <div class="group relative">
              <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <%= link_to post.title, post %>
              </h3>
              <p class="mt-2 line-clamp-3 text-sm leading-6 text-gray-600"><%= post.summary %></p>
            </div>
          </article>
        <% end %>
      </div>
    </div>

    <div>
      <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-6">Recent Projects</h2>
      <div class="space-y-8">
        <% @recent_projects.each do |project| %>
          <article class="flex flex-col items-start justify-between border-l-4 border-green-100 pl-4 hover:border-green-600 transition-colors">
            <div class="group relative">
              <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <%= link_to project.title, project %>
              </h3>
              <p class="mt-2 line-clamp-3 text-sm leading-6 text-gray-600"><%= project.summary %></p>
            </div>
          </article>
        <% end %>
      </div>
    </div>

  </div>
</div>